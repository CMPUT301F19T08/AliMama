<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainmenu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_menu_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Main Menu"
            android:textSize="55dp" />

        <Button
            android:id="@+id/mood_history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/main_menu_string"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/my_button_bg"
            android:text="View Mood History"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mood_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/mood_history_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button_bg"
            android:layout_marginTop="50dp"
            android:text="View Mood History on Map"
            android:paddingHorizontal="10sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/add_view_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/mood_map_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button_bg"
            android:layout_marginTop="50dp"
            android:text="View/Add Friends"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/add_view_friend_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/my_button_bg"
            android:text="Log Out"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>