<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/main_menu_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/main_menu_name"
        android:textSize="55sp"

        />

    <Button
        android:id="@+id/main_menu_mood_history_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_view_mood_history_btn_name"
        android:layout_margin="8dp"

        />
    <Button
        android:id="@+id/main_menu_mood_map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_view_mood_history_on_map_btn_name"
        android:layout_margin="8dp"

       />
    <Button
        android:id="@+id/main_menu_add_view_friend_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/main_menu_view_add_friends_btn_name"
        android:layout_margin="8dp"

        />
    <Button
        android:id="@+id/main_menu_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu_logout_btn_name"
        android:layout_margin="8dp"

       />

</LinearLayout>





