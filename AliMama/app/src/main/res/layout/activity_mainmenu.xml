<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mainmenu">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_menu_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Main Menu"
            android:textSize="55dp" />

        <Button
            android:id="@+id/mood_history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/main_menu_string"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/my_button_bg"
            android:text="View Mood History"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mood_map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mood_history_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/my_button_bg"
            android:paddingHorizontal="10sp"
            android:text="View Mood History on Map"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_view_friend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/mood_map_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button_bg"
            android:layout_marginTop="50dp"
            android:text="View/Add Friends"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/add_view_friend_button"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="90dp"
            android:background="@drawable/my_button_bg"
            android:text="Log Out"
            android:paddingHorizontal="10sp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="9dp"
            android:gravity="bottom|center|center_horizontal"
            android:text="Button" />

            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Main Menu"
            android:textSize="55dp" />


    </RelativeLayout>

    <Button
        android:gravity="center"

        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        tools:layout_editor_absoluteX="165dp"
        tools:layout_editor_absoluteY="403dp" />

    <Button

        android:id="@+id/add_view_friend_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:gravity="center"
        android:text="View/Add Friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <Button
        android:id="@+id/mood_map_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View Mood History on Map"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="195dp" />

    <Button

        android:id="@+id/mood_history_button"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View Mood History"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="127dp" />

</androidx.constraintlayout.widget.ConstraintLayout>