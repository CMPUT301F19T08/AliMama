<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/listitem_emotional_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emotional State"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         />

    <TextView
        android:id="@+id/listitem_date_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:layout_toRightOf="@id/listitem_emotional_state" />

    <TextView
        android:id="@+id/listitem_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_toRightOf="@id/listitem_date_prompt"/>

    <TextView
        android:id="@+id/listitem_time_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:  "
        android:layout_toRightOf="@id/listitem_date_value" />

    <TextView
        android:id="@+id/listitem_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listitem_time_prompt" />

    <TextView
        android:id="@+id/username_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_below="@id/listitem_emotional_state"/>

    <TextView
        android:id="@+id/reason_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:layout_below="@id/username_value"/>

    <TextView
        android:id="@+id/reason_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reason_prompt"/>


    <ImageButton
        android:id="@+id/listitem_edit_mood_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#4CAF50"
        android:layout_alignParentRight="true"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton

        android:id="@+id/listitem_delete_mood_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="#E91E63"
        android:layout_toLeftOf="@id/listitem_edit_mood_btn"
        app:srcCompat="@android:drawable/ic_menu_delete" />






</RelativeLayout>