<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_page_request">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:id="@+id/imageV"
                android:src="@mipmap/ic_launcher_foreground"
                android:layout_width="75dp"
                android:layout_height="75dp"/>

            <TextView
                android:id="@+id/text_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"

                android:layout_alignTop="@+id/imageV"
                android:layout_marginStart="40dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/imageV"

                android:text="Friends"
                android:textSize="20dp"
                android:textStyle="bold" />






            <TextView
                android:id="@+id/text_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginStart="80dp"

                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/text_friend"
                android:text="Requests"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/friend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_friend"
                android:layout_alignStart="@id/imageV"
                android:layout_marginStart="126dp"
                android:layout_marginTop="14dp"
                android:text="10"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/request_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_request"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="60dp"
                android:text="2"
                android:textSize="30dp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>